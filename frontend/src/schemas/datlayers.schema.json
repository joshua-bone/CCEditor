{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/datlayers.schema.json",
  "title": "DATEditor layered project",
  "type": "object",
  "required": ["schemaVersion", "project", "levels"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "enum": [1]
    },
    "project": {
      "type": "object",
      "required": ["id", "name", "gameId"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "gameId": { "type": "string", "enum": ["cc1"] },
        "meta": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "levels": {
      "type": "array",
      "items": { "$ref": "#/definitions/levelWithLayers" }
    }
  },
  "additionalProperties": false,

  "definitions": {
    "size": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "cc1Cell": {
      "type": "object",
      "required": ["top", "bottom"],
      "properties": {
        "top": { "type": "string" },
        "bottom": { "type": "string" }
      },
      "additionalProperties": false
    },
    "layer": {
      "type": "object",
      "required": ["id", "name", "visible", "grid"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "visible": { "type": "boolean" },
        "grid": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "anyOf": [
                { "type": "null" },
                { "$ref": "#/definitions/cc1Cell" }
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "levelWithLayers": {
      "type": "object",
      "required": ["id", "name", "size", "meta", "layers", "activeLayerId"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "size": { "$ref": "#/definitions/size" },
        "meta": {
          "type": "object",
          "additionalProperties": true
        },
        "layers": {
          "type": "array",
          "items": { "$ref": "#/definitions/layer" },
          "minItems": 1
        },
        "activeLayerId": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
